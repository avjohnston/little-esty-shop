<h1><%= @merchant.name %></h1>
<nav class="nav">
  <%= link_to 'My Items', merchant_items_path(@merchant) %>
  <%= link_to 'My Invoices', merchant_invoices_path(@merchant) %>
</nav>

<%= link_to "My Discounts", merchant_discounts_path(@merchant) %>

<h2>Favorite Customers</h2>
<ol>
  <% @top_five_customers.each do |customer| %>
    <li id="customer-<%= customer.id %>">
      <%= customer.full_name %> - <%= customer.transaction_count %> Purchases
    </li>
  <% end %>
</ol>

<h2>Items Ready to Ship</h2>
<% @items_ready_to_ship.each do |invoice_item| %>
  <%= invoice_item.item_name %> -
  <%= link_to "Invoice ##{invoice_item.invoice_id}", merchant_invoice_path(@merchant, invoice_item.invoice) %> -
  <%= invoice_item.invoice_date %><br>
<% end %>
