<h1>New Discount For <%= @merchant.name %></h1>

<%= form_with url: merchant_discounts_path(@merchant), local: true do |f| %>
  <%= f.label :percent %>
  <%= f.number_field :percent, min: 0, step: 0.01, max: 1 %><br><br>
  <%= f.label :threshold %>
  <%= f.number_field :threshold %><br><br>
  <%= f.submit 'Create Discount' %>
<% end %>
